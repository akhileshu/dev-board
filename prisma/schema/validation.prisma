// # ValidationMetric, EarlyAdopter

model EarlyAdopter {
  id         String   @id @default(uuid())
  MVPDetailsId  String
  MVPDetails    MVPDetails  @relation(fields: [MVPDetailsId], references: [id])

  name       String
  contact    String
  role       String?  // e.g. "Tester", "Influencer"
  notes      String?
}
model ValidationMetric {
  id         String         @id @default(uuid())
  MVPDetailsId  String
  MVPDetails    MVPDetails  @relation(fields: [MVPDetailsId], references: [id])

  goal       String         // e.g. "Get 500 signups"
  metric     String         // e.g. "Signup count"
  target     Float
  actual     Float?
  status     OutcomeStatus?
}
